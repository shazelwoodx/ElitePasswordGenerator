        specialcharacter2=chr(random.randint(33,64)) #Randomly chooses a special character from the ascii list within the range selected
        number1=chr(random.randint(48,57)) #Randomly chooses a number from the ascii list within the range selected
        password = uppercaseLetter1 + uppercaseLetter2 + number1 + lowercaseLetter1 + lowercaseLetter2 + lowercaseLetter3 + lowercaseLetter4 + lowercaseLetter5 + lowercaseLetter6 + lowercaseLetter7+ lowercaseLetter8 + lowercaseLetter9 + lowercaseLetter10+ lowercaseLetter11 + specialcharacter1 + specialcharacter2 #adds all the variable from above and add them to one new variable
        password = shuffle(password) #Shuffles the password
        self.t4.insert(END, password) #Places the new variable password in the entry box

window=Tk() #Opens a window
mywin=Password_Generator(window) #uses the class above (Password_Generator line 4) and all functions in the class
window.title('133t Pa$$word Generator') #Titles the Popup Windo
window.geometry("500x400") #Dictates how large the Window is when opened
window.mainloop() #keeps the window(Password_Generator) open
