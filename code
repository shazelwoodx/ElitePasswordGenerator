from os import times
from tkinter import *
import random
class MyWindow:
    def __init__(self, win):
        
        self.b1=Button(win, text='8 Characters',font="Arial", command=self.Eight) #creates a button that is pressable that will initiate function below, Font is for the button not the text in the button
        self.b2=Button(win, text='12 Characters',font="Arial", command=self.Twelve)#creates a button that is pressable that will initiate function below Font is for the button not the text in the button
        self.b3=Button(win,text="16 Characters",font="Arial", command=self.Sixteen)#creates a button that is pressable that will initiate function below Font is for the button not the text in the button

        self.lbl4=Label(win, text='Leet Pa$$word:',font="Times") #creates a label that is not pressable

        self.t4=Entry(font="Times") # creates an entry box that is typeable and will display font selected

        self.b1.place(x=100, y=50) # Places button in the location provided
        self.b2.place(x=100, y=100) # Places button in the location provided
        self.b3.place(x=100,y=150) # Places button in the location provided
        self.lbl4.place(x=70, y=200) # Places label in the location provided
        self.t4.place(x=200, y=200) # Places entry box in the location provided
              
    def Eight(self):
        self.t4.delete(0, 'end')
        def shuffle(string):
            tempList = list(string)
            random.shuffle(tempList)
            return ''.join(tempList)  
        uppercaseLetter1=chr(random.randint(65,90))
        lowercaseLetter1=chr(random.randint(97,122))
        lowercaseLetter2=chr(random.randint(97,122)) 
        lowercaseLetter3=chr(random.randint(97,122))
        lowercaseLetter4=chr(random.randint(97,122))
        lowercaseLetter5=chr(random.randint(97,122))
        specialcharacter1=chr(random.randint(33,64))
        number1=chr(random.randint(48,57))
        password = uppercaseLetter1 + number1 + lowercaseLetter1 + lowercaseLetter2 + lowercaseLetter3 + lowercaseLetter4 + lowercaseLetter5 + specialcharacter1
        password = shuffle(password)
        self.t4.insert(END, password)

    def Twelve(self):
        self.t4.delete(0, 'end')
        def shuffle(string):
            tempList = list(string)
            random.shuffle(tempList)
            return ''.join(tempList)  
        uppercaseLetter1=chr(random.randint(65,90))
        uppercaseLetter2=chr(random.randint(65,90)) 
        lowercaseLetter1=chr(random.randint(97,122))
        lowercaseLetter2=chr(random.randint(97,122)) 
        lowercaseLetter3=chr(random.randint(97,122))
        lowercaseLetter4=chr(random.randint(97,122))
        lowercaseLetter5=chr(random.randint(97,122))
        lowercaseLetter6=chr(random.randint(97,122))
        lowercaseLetter7=chr(random.randint(97,122))
        specialcharacter1=chr(random.randint(33,64))
        specialcharacter2=chr(random.randint(33,64))
        number1=chr(random.randint(48,57))
        password = uppercaseLetter1 + uppercaseLetter2 + number1 + lowercaseLetter1 + lowercaseLetter2 + lowercaseLetter3 + lowercaseLetter4 + lowercaseLetter5 + lowercaseLetter6 + lowercaseLetter7 + specialcharacter1 + specialcharacter2
        password = shuffle(password)
        self.t4.insert(END, password)

    def Sixteen(self):
        self.t4.delete(0, 'end')
        def shuffle(string):
            tempList = list(string)
            random.shuffle(tempList)
            return ''.join(tempList)  
        uppercaseLetter1=chr(random.randint(65,90))
        uppercaseLetter2=chr(random.randint(65,90)) 
        lowercaseLetter1=chr(random.randint(97,122))
        lowercaseLetter2=chr(random.randint(97,122)) 
        lowercaseLetter3=chr(random.randint(97,122))
        lowercaseLetter4=chr(random.randint(97,122))
        lowercaseLetter5=chr(random.randint(97,122))
        lowercaseLetter6=chr(random.randint(97,122))
        lowercaseLetter7=chr(random.randint(97,122))
        lowercaseLetter8=chr(random.randint(97,122))
        lowercaseLetter9=chr(random.randint(97,122))
        lowercaseLetter10=chr(random.randint(97,122))
        lowercaseLetter11=chr(random.randint(97,122))
        specialcharacter1=chr(random.randint(33,64))
        specialcharacter2=chr(random.randint(33,64))
        number1=chr(random.randint(48,57))
        password = uppercaseLetter1 + uppercaseLetter2 + number1 + lowercaseLetter1 + lowercaseLetter2 + lowercaseLetter3 + lowercaseLetter4 + lowercaseLetter5 + lowercaseLetter6 + lowercaseLetter7+ lowercaseLetter8 + lowercaseLetter9 + lowercaseLetter10+ lowercaseLetter11 + specialcharacter1 + specialcharacter2
        password = shuffle(password)
        self.t4.insert(END, password)

window=Tk()
mywin=MyWindow(window)
window.title('133t Pa$$word Generator')
window.geometry("500x400")
window.mainloop()
